<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Lock_Opportunity_Forecast</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  $RecordType.Name = &quot;Forecast&quot;,
  NOT($Permission.View_Opportunity_Forecast)
)</errorConditionFormula>
    <errorMessage>You do not have the access to modify this opportunity</errorMessage>
</ValidationRule>
